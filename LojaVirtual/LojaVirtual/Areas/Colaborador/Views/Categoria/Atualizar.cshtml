@model LojaVirtual.Models.Categoria
@{
    ViewData["Title"] = "Atualizar";
    Layout = "_Layout";
}

<h1>Atualizar</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input asp-for="Nome" placeholder="Digite um nome" class="form-control">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Slug">Slug</label>
        <input asp-for="Slug" placeholder="Digite um slug" class="form-control">
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaPaiId">Categoria Pai</label>
        <select asp-for="CategoriaPaiId" class="form-control" asp-items="@ViewBag.Categorias">
            <option value="null">Selecione</option>
        </select>
        <span asp-validation-for="CategoriaPaiId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-dark">Voltar</a>
</form>